<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Secure Chat</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow mb-5">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">SecureChatOnline.co.za</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav ml-auto">
                    <a class="nav-item nav-link" href="#">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link" })</a>
                    <a class="nav-item nav-link disabled" href="#">@Html.ActionLink("How it works", "HowItWorks", "Home", null, new { @class = "nav-item nav-link" })</a>
                    <a class="nav-link disabled" href="#">@Html.ActionLink("Chat", "Chat", "Home", null, new { @class = "btn btn-primary" })</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-5 pt-5">
        @RenderBody()
        <footer class="mt-5 pt-5">
            <p style="text-align:center;">&copy; @DateTime.Now.Year - SecureChatOnline</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
